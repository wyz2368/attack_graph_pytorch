DQNEncDec.q_lr = 5e-5
DQNEncDec.encoder_lr = 5e-5
DQNEncDec.grad_norm_clipping = 10
DQNEncDec.hidden_sizes = [256, 256]
DQNEncDec.state_embed_dim = 124
